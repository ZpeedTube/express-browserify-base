{
    "compilerOptions": {
        "strict": true,
        "module": "commonjs",
        "esModuleInterop": true,
        "target": "es6",
        "noImplicitAny": false,
        "moduleResolution": "node",
        "sourceMap": true,
        "outDir": "dist",
        "baseUrl": ".",
        "removeComments": true,
        "preserveConstEnums": true,
        "declaration": true,
        "paths": {
            "*": [
                "node_modules/*"
            ]
        }
    },        
    "include": [
        "src/**/*"
    ]
}